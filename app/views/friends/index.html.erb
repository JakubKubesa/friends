<% content_for :title, "Friends" %>

<h1>Friends</h1>

<% if user_signed_in? %>
  <div class="container"> <!-- Přidáno div s třídou container -->
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <tr>
              <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
              <td><%= friend.email %></td>
              <td><%= friend.phone %></td>
              <td><%= friend.twitter %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <%= link_to "New friend", new_friend_path, class: 'btn btn-success' %>
  </div> <!-- Konec divu container -->
<% else %>
    <p>Hello User :)</p>
<% end %>
